  <div class="panel-heading">
    <h4><%= "Event Added" %></h4>
  </div>
  <div class="panel-body">
      <div class="form-group">
      	 <h6><%= "Event Name" %></h6>
	  <%= @event.title %>
      </div>
      <div class="form-group">
        <h6><%= "Access typee" %></h6>
        <%= @event.access_type %>
      </div>
      <div class="form-group">
	<h6><%= "Description" %></h6>
        <%= @event.description %>
      </div>
      <div class="form-group">
	<h6><%= "Location" %></h6>
        <%= @event.location %>
      </div>
      <div class="form-group">
  	<h6><%= "Date/Time" %></h6>
        <%= @event.datetime %>
      </div>
      <div class="form-group">
	<h6><%= "Event link" %></h6>  
