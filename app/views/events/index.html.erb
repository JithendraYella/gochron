  </ul>
</div>

<div class="row">
  <div class="col-xs-9">
    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
	<%= link_to 'Create New Event',new_event_path, class: "button",right: "200px" %> 
	<table>
	<tr>
	    <td>
	    </td>
            <td> <% @events.each do |event|%>
	        <div class="panel-body">
		      <div class="form-group">
		         <h6><b><%= "Event Name:" %></b></h6>
	        	  <%= event.title %>
	              </div>
		      <div class="form-group">
		        <h6><b><%= "Access typee:" %></b></h6>
        		<%= event.access_type %>
	     	      </div>
      		      <div class="form-group">
        		<h6><b><%= "Description:" %></b></h6>
        		<%= event.description %>
      		      </div>
	      	      <div class="form-group">
        		<h6><b><%= "Location:" %></b></h6>
		        <%= event.location %>
	              </div>
		      <div class="form-group">
		        <h6><b><%= "Date/Time:" %></b></h6>
		        <%= event.datetime %>
	              </div>
	              <div class="form-group">
		        <h6><b><%= "Event link:" %></b></h6>
		        <%= event.link %>
	              </div>
   		 <%= link_to 'Edit',edit_event_path(event), class: "btn btn-primary" %>
		 <%= link_to 'Remove',event_path(event),method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary" %>
