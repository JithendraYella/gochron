<div class="row">
  <div class="btn-group" role="group" aria-label="FilterButtons">
    <%= link_to 'Created',groups_path(:request_type => 'MyGroups'), class: "btn btn-default" %>
    <%= link_to 'Subscribed',groups_path(:request_type => 'Subscribed'), class: "btn btn-default" %>
    <%= link_to 'All Groups',groups_path(:request_type => 'All'), class: "btn btn-default" %>
  </div>
  <hr/>
</div>

<div class="row">
  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <%= link_to 'Create Group',new_group_path, class: "btn btn-default btn-sm" %>
      <br/>
      <br/>
      <table class="table">
        <tr>
          <th>Group</th>
          <th></th>
        </tr>
        <% @group.each do |group| %>
          <tr>
            <td><%= group.name %></td>
            <% if group.user_id == current_user.id %> 
               <td><%= link_to 'Show',group_path(group), class: "btn btn-default btn-sm" %> 
               <%= link_to 'Edit',edit_group_path(group), class: "btn btn-default btn-sm" %> 
               <%= link_to 'Delete',group_path(group),method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-default btn-sm" %></td>
	    <% else %>
		 <td><%= link_to 'Show',group_path(group), class: "btn btn-default btn-sm" %>  </td>
	    <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
