		<% if @event_by_date[date]%>
			<ul>
				<% @event_by_date[date].each do |event|%>
				<li><%= event.title%></li>		
				<% end %>
			</ul>
		<% end %>
	<% end %>
      </div>
      </div>
    <div id="menu2" class="tab-pane fade">
      <h3>Registered</h3>
