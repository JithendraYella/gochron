				<% @event_by_date[date].each do |event|%>
				<li><%= event.title%></li>		
				<% end %>
			</ul>
		<% end %>
	<% end %>
      </div>
      </div>
  </div>

		</div>
		<div class="col-xs-3">
			<%@public_event.each do |eve|%>
<h3><%=eve.title%></h1>
<p><%=eve.description%></p>
<p><span class="glyphicon glyphicon-home">&nbsp</span><%=eve.location%></p>
<p><span class="glyphicon glyphicon-time">&nbsp</span><%=Date.parse(eve.datetime).strftime("%b %d, %Y")%></p>
<p><%=eve.link%></p>
<hr>
<%end%>
		</div>
	</div>
</div>

